<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.mypack.dao.StudentDao">



	<!-- 查询所有 -->
	<select id="queryAllStudents" resultType="Student">
		select * from con
	</select>
	<select id="queryOneStudent" resultType="Student" parameterType="Student">
		select * from con where id=#{id}
		
	</select>
	<select id="addOneStudent" resultType="integer">
		insert into con (name,sex,tel,szgs,bm,zw) values (#{name},#{sex},#{tel},#{szgs},#{bm},#{zw})
	</select>
	<select id="delOneStudent" resultType="integer">
	    delete from con where id=#{id}
	</select>
	<select id="queryOneStudentById" resultType="Student">
	    select * from con where id=#{id}
	</select>
	<update id="updateStudent" >
	   update con set name=#{name},sex=#{sex},tel=#{tel},szgs=#{szgs},bm=#{bm},zw=#{zw} where id=#{id}
	</update>
</mapper>
